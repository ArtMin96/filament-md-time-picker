{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "npx tailwindcss -i resources/css/filament-md-time-picker.css -o resources/dist/filament-md-time-picker.css --postcss --watch",
        "dev:scripts": "esbuild resources/js/filament-md-time-picker.js --bundle --sourcemap=inline --outfile=resources/dist/filament-md-time-picker.js --watch",
        "build:styles": "npx tailwindcss -i resources/css/filament-md-time-picker.css -o resources/dist/filament-md-time-picker.css --postcss --minify && npm run purge",
        "build:scripts": "node bin/build.js",
        "purge": "filament-purge -i resources/dist/filament-md-time-picker.css -o resources/dist/filament-md-time-picker.css -v 3.x",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.2",
        "cssnano": "^6.0.1",
        "esbuild": "^0.19.11",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.27",
        "postcss-cli": "^10.1.0",
        "postcss-nesting": "^12.0.0"
    },
    "dependencies": {
        "@dmuy/timepicker": "^2.0.2"
    }
}
